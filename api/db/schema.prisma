datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Book {
  id         Int      @id @default(autoincrement())
  title      String
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  image      String
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}
